  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "express": "^4.15.4",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.0.17",
    "morgan": "^1.9.1"
  }
}
